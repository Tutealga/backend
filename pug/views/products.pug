include layout.pug 

div.container.mt-0
    div.row.vh-100.align-items-center.justify-content-center
        div.col-auto
            div.my-4.text-center
                h1.fw-bold.text-light='Listado de productos'
            if products.length>0
                table.table(border="1" align="center" bordercolor="black" cellspacing="2")
                    thead
                        tr.bg-danger.align-middle(align="center")
                            th.fs-4.fw-bold.text-light(style="width=200px")='Titulo'
                            th.fs-4.fw-bold.text-light(style="width=200px")='Precio'
                            th.fs-4.fw-bold.text-light(style="width=200px")='Imagen'
                    tbody
                        each product in products
                            tr.align-middle(align="center")
                                th.bg-light.fs-4.text-center(width=200)=product.title
                                th.bg-light.fs-4(style="width:200px")=product.price
                                th.bg-light.fs-4(style="width:200px")
                                    img(src=product.thumbnail alt=product.title style="width:100px; height:100px")
            else
                h2.text-danger='No hay productos en el listado'

script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")