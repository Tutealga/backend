include layout.pug 

div.container
    div.row.vh-100.align-items-center.justify-content-center
      div.col-auto
        div.card.bg-danger(style="width: 500px;")
            div.card-body
                div.mb-3.text-center
                    h1.text-light.fw-bold='Nuevo producto'
                    form(action='/productos' method='POST')
                     div.mb-3
                         label.form-label.fw-bold.fs-5(for="title")='Nombre'
                         input.form-control(type="text" name="title" placeholder="Nombre del producto")
                     div.mb-3
                         label.form-label.fw-bold.fs-5(for="price")='Precio'
                         input.form-control(type="number" name="price" placeholder="Precio del producto")
                     div.mb-3
                         label.form-label.fw-bold.fs-5(for="thumbnail")='Thumbnail'
                         input.form-control(type="text" name="thumbnail" placeholder="Thumbnail del producto")
                     div.mt-3.text-center
                         input.btn.btn-light.mb-3.fw-bold(type="submit" value='Crear producto')
                           
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous")
