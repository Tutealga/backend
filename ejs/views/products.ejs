<!DOCTYPE html>
<html lang='es'>
 <head>
  <meta charset="UTF-8"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Motores de plantillas - EJS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous"/>
 </head>
 <body class="bg-dark">
    <header>
<nav class="navbar navbar-dark navbar-expand-lg bg-danger">
                <div class="container-fluid">
<span class="navbar-brand fw-bold">Productos</span>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active fw-bold" href="/productos">Productos</a>
                                </li>
                            <li class="nav-item">
                                <a class="nav-link active fw-bold" href="/">Agregar Producto</a>
                                </li>
                                </ul>
                </div>
                </div>
                    
                                </nav>
    </header>
<div class="container mt-0">
    <div class="row vh-100 align-items-center justify-content-center">
        <div class="col-auto">
<div class="my-4 text-center">
<h1 class="fw-bold text-light">Listado de productos</h1>
            <% if (products.length>0) { %>
                <table class="table" bordercolor="black" cellspacing="2">
                    <thead>
                        <tr class="bg-danger align-middle">
<th class="fs-4 fw-bold text-light">Titulo</th>
                            <th class="fs-4 fw-bold text-light">Precio</th>
                            <th class="fs-4 fw-bold text-light">Imagen</th>
                        </tr>         
                            </thead>
                    <tbody>
                        <% products.forEach(product=> { %>
                            <tr class="align-middle">
                                <th class="bg-light fs-4 text-center"><%= product.title %></th>
                                <th class="bg-light fs-4"><%= product.price %></th>
                                <th class="bg-light fs-4"><img src="<%= product.thumbnail %>" alt="<%= product.title %>" style="width:100px; height:100px"/></th>   
                            </tr>
                                    <% }) %>
                    </tbody>  
                                    </table>
            <% } else { %>
                <h2 class="text-danger">No hay productos en el listado</h2>
                <% } %>
</div>
                
        </div>
                </div>
                </div>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
 </body>
</html>

